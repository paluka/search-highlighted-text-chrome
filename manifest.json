{
  "manifest_version": 3,
  "name": "Search Highlighted Text",
  "version": "1.0",
  "description": "Search for highlighted text in multiple configurable search engines with optional input prompt",
  "permissions": ["contextMenus", "storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Search Highlighted Text"
  }
}
